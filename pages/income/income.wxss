/* pages/income/income.wxss */
form {
  position: flex;
}

.divLine {
  position: flex;
  background: #e0e3da;
  width: 90%;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  margin-left: auto;
  margin-right: auto;
  height: 2rpx;
}

.wrapper {
  display: flex;
  flex-direction: row;
  margin-top: 50rpx;
  text-size-adjust: 200px;
  background-color: #fff;
}

.text {
  width: 50%;
  text-align: left;
  margin-left: 40rpx;
}

.input {
  margin-left: 40rpx;
}

.inputmoney {
  width: 50%;
  text-align: right;
  margin-right: 40rpx;
}

.arrow {
  width: 10px;
  height: 10px;
  border-top: 2px solid #999;
  border-right: 2px solid #999;
  position: absolute;
  right: 40rpx;
  transform: rotate(45deg);
  margin-top: 10rpx;
}

picker {
  width: 50%;
  text-align: right;
  margin-right: 40rpx;
}

.btn-area {
  bottom: 0;
  position: fixed;
  width: 100%;
  background-color:transparent;
}

.btn::after {
  border: none;
  border-radius:0;
}

page {
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #fff;
}

.header {
  display: flex;
  width: 100%;
  background-color: #8997f0;
  height: 100rpx;
  justify-content: center;
}

.nav-tabs {
  width: 50%;
  height: 75rpx;
  display: flex;
  position: fixed;
  align-self: center;
}

.tab-content {
  flex: 1;
}

.default {
  line-height: 75rpx;
  text-align: center;
  flex: 1;
  border-bottom: 1px solid #fff;
  border-left: 1px solid #fff;
  border-right: 1px solid #fff;
  border-top: 1px solid #fff;
  color: #fff;
  font-weight: bold;
  font-size: 28rpx;
}

.active {
  line-height: 75rpx;
  text-align: center;
  color: #8997f0;
  flex: 1;
  border-bottom: 37px solid #fff;
  font-weight: bold;
  font-size: 28rpx;
}
